      label Imie:
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
      live-edit(field="user.firstname", on-save="save(user)", input-type="text")
  li.row
    .col-lg-2.col-md-2.col-sm-2.col-xs-2
      label Nazwisko:
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
      live-edit(field="user.lastname", on-save="save(user)", input-type="text")
  li.row
    .col-lg-2.col-md-2.col-sm-2.col-xs-2
      label E-mail:
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
