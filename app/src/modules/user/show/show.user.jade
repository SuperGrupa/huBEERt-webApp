  li.row
    .col-lg-2.col-md-2.col-sm-2.col-xs-2
      label Miasto:
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
      live-edit(field="user.city", on-save="save(user)", input-type="text")
  li.row
    .col-lg-2.col-md-2.col-sm-2.col-xs-2
      label Data urodzenia:
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
