doctype html
html(ng-app='huBEERt')
  head
    meta(charset='utf-8')
    meta(name='viewport',
         content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    meta(property='og:title', content='huBEERt')
    meta(property='og:site_name', content='huBEERt')
    meta(property='og:description', content='huBEERt')
    title huBEERt

    link(href='css/app.css', rel='stylesheet')
    link(rel='icon', type='image/ico', href='img/favicon.ico')
    
    -if (GLOBALS.ROLLBAR_ACCESS_TOKEN)
      script(type='text/javascript').
        var _rollbarConfig = {
            accessToken: '#{GLOBALS.ROLLBAR_ACCESS_TOKEN}',
            captureUncaught: true,
            payload: {
              environment: '#{GLOBALS.ENV_NAME}'
            }
        };
    script(src='js/rollbar.js')
    script(src='js/vendor.js')
    script(src='js/app.js')

  body
    div(ng-controller='AppCtrl')
      div(ui-view='')
      span
